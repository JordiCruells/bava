.carousel-popular-polls
  .carousel-indicators
    bottom: -20px;
    li
      background-color color-primary-0
      border none
    .active
      background-color color-secondary-2-0
  .carousel-control
    display none
  .list-group
    height 180px
    overflow-y auto
.popular-poll-item
  .list-group-item
    color black
    display flex
    span
      flex-grow 100
    .votes
      flex-grow 1
      background color-secondary-1-2
    button,
      flex-grow 1
